<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RequestFormController">
    <left>
        <VBox fx:id="sidebarPlaceholder" />
    </left>
    <center>
        <VBox fx:id="mainPanel" spacing="10" padding="20">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="requestedTab" text="Requested" />
                <Button fx:id="addRequestButton" text="+ Add Request" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="exportExcelBtn" text="Export Excel" />
                <Button fx:id="exportPdfBtn" text="Export PDF" />
                <Button fx:id="exportCsvBtn" text="Export CSV" />
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filter by status:" />
                <ComboBox fx:id="statusFilter" prefWidth="160" />
            </HBox>

            <TableView fx:id="requestTable" prefHeight="500">
                <columns>
                    <TableColumn fx:id="prodIdCol" text="Product ID" />
                    <TableColumn fx:id="prodNameCol" text="Product Name" />
                    <TableColumn fx:id="qtyCol" text="Requested Quantity" />
                    <TableColumn fx:id="requestedByCol" text="Requested By" />
                    <TableColumn fx:id="statusCol" text="Status" />
                    <TableColumn fx:id="dateCol" text="Request Date" />
                    <TableColumn fx:id="actionCol" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
